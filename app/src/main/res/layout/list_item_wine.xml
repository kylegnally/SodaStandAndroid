<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/list_item_wine_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="14dp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_wine_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_wine_price_text_view"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:text="Wine Title"/>

    <TextView
        android:id="@+id/list_item_wine_id_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_wine_price_text_view"
        android:layout_below="@id/list_item_wine_title_text_view"
        android:textSize="14dp"
        android:padding="4dp"
        tools:text="Wine Id"/>

</RelativeLayout>