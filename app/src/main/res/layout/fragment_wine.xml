<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wine_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wine_name_label"
        android:textSize="28dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/wine_title_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wine_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wine_id_label"
            android:layout_weight="1"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/wine_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wine_price_label"
            android:layout_weight="1"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>